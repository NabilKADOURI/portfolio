<section class="contact" id="contact">
	<div class="container">
		<h2 class="section-title">Me<span>Contacter</span>
		</h2>
		<div class="form" data-aos="flip-left" data-aos-easing="ease-out-cubic" data-aos-duration="1000">
			{% for type, messages in app.flashes(['success'])%}
				{% for message in messages %}
					<div class=" alert alert-{{type}}">
						{{message|join('. ')}}
					</div>
				{% endfor %}
			{% endfor %}

			{{form_start(contactForm)}}
			<div class="row justify-content-center">
				<div class="col-lg-6 ">
					{{form_row(contactForm.name)}}
				</div>
				<div class="col-lg-6">
					{{form_row(contactForm.firstName)}}
				</div>
			</div>
			{{form_end(contactForm)}}
		</div>
	</div>
</section>
